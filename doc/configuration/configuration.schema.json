{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "properties": {
    "hooks": {
      "description": "WebAssembly hooks",
      "properties": {
        "authenticate": {
          "description": "Path to an authenticate WASM module",
          "type": "string"
        },
        "intercept": {
          "description": "Path to an intercept WASM module",
          "type": "string"
        }
      },
      "title": "Hook configuration",
      "type": "object"
    },
    "sources": {
      "description": "Sources",
      "items": {
        "oneOf": [
          {
            "properties": {
              "type": {
                "const": "counter"
              },
              "id": {
                "description": "Unique source identifier",
                "type": "string"
              },
              "interval_ms": {
                "description": "Interval (in milliseconds) at which the counter emits events",
                "minimum": 1,
                "type": "integer"
              },
              "lazy": {
                "description": "Start emitting events upon the first subscription",
                "type": "boolean"
              },
              "min": {
                "description": "Minimum value",
                "type": "number"
              },
              "max": {
                "description": "Maximum value",
                "type": "number"
              }
            },
            "required": [
              "type",
              "id",
              "interval_ms",
              "min"
            ],
            "title": "Counter source configuration",
            "type": "object"
          },
          {
            "properties": {
              "type": {
                "const": "kafka"
              },
              "topic": {
                "description": "Kafka topic",
                "type": "string"
              }
            },
            "required": [
              "type",
              "topic"
            ],
            "title": "Kafka source configuration",
            "type": "object"
          }
        ]
      },
      "title": "Source configuration",
      "type": "array"
    },
    "server": {
      "description": "Server configuration",
      "properties": {
        "address": {
          "description": "Server address and port",
          "type": "string",
          "examples": [
            "127.0.0.1:8000"
          ]
        }
      },
      "required": [
        "address"
      ],
      "title": "Server configuration",
      "type": "object"
    },
    "subscriber": {
      "description": "Subscriber configuration",
      "properties": {
        "buffer_capacity": {
          "description": "Buffer capacity for pull-based subscriptions",
          "minimum": 1,
          "type": "integer"
        },
        "lag_notice_threshold": {
          "description": "The maximum number of events that a pull-based subscriber is permitted to lag behind the source before kiwi emits a lag notice",
          "minimum": 1,
          "type": "integer"
        }
      },
      "title": "Subscriber configuration",
      "type": "object"
    }
  },
  "required": [
    "sources",
    "server"
  ],
  "title": "Kiwi configuration",
  "type": "object"
}
